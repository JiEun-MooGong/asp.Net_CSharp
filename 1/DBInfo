-- 카테고리 테이블

CREATE TABLE [dbo].[TB_CATEGORY](
	[IDX] [int] IDENTITY(1,1) NOT NULL,
	[TITLE] [varchar](20) NULL,
	[SUMMARY] [varchar](100) NULL,
 CONSTRAINT [PK_TB_CATEGORY] PRIMARY KEY CLUSTERED 
(
	[IDX] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]


-- 게시물 테이블

CREATE TABLE [dbo].[TB_CONTENTS](
	[IDX] [int] IDENTITY(1,1) NOT NULL,
	[TITLE] [varchar](20) NULL,
	[SUMMARY] [varchar](max) NULL,
	[CREATE_DT] [datetime] NULL,
	[CREATE_USER_NM] [varchar](10) NULL,
	[TAGS] [varchar](max) NULL,
	[LIKE_CNT] [int] NULL,
	[CATEGORY_IDX] [int] NULL,
 CONSTRAINT [PK_TB_CONTENTS] PRIMARY KEY CLUSTERED 
(
	[IDX] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY] TEXTIMAGE_ON [PRIMARY]
GO

ALTER TABLE [dbo].[TB_CONTENTS] ADD  DEFAULT ((0)) FOR [LIKE_CNT]
GO
